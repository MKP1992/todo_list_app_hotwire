<%= turbo_frame_tag 'notice' do %>
  <%= render 'shared/notice' %>
<% end %>

<h1 class="font-bold text-2xl">TODO List</h1>
<div class="mt-4">
  <%= render "form", task: Task.new %>
</div>
<h2 class="text-2xl font-bold mt-6">Tasks</h2>
<div id="tasks" class="space-y-4">
  <% if @tasks.any? %>
    <%= render @tasks %>
  <% else %>
    <p id="task_not" class="text-gray-500 mt-6">No active tasks available.</p>
  <% end %>
</div>
