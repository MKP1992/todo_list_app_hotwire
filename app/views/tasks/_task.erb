<div id="<%= dom_id(task) %>" class="p-4 bg-white rounded-lg shadow-md flex justify-between items-center">
  <p><%= task.title %></p>
    <%= button_to (task.archived? ? 'Unarchive' : 'Archive'), task_path(task, task: { archived: !task.archived? }), method: :patch, form: { data: { turbo_stream: true } }, class: (task.archived? ? "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" : "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded") %>
</div>
